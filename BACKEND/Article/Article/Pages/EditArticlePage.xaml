<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArticleMaui.Pages.EditArticlePage"
             Title="EditArticlePage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label 
                Text="Ujsag adatainak szerkesztése"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="#333"
                HorizontalOptions="Center"
                Margin="0,0,0,10"/>

            <Border 
                Stroke="#E0E0E0"
                BackgroundColor="White"
                StrokeThickness="1"
                Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="14">

                    <VerticalStackLayout>
                        <Label Text="cim" FontSize="14" TextColor="#555" />
                        <Entry 
                            x:Name="TitleEntry" 
                            Placeholder="Add meg a cimet..."
                            BackgroundColor="#FAFAFA"
                            TextColor="#222"
                            HeightRequest="40" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="tartalom" FontSize="14" TextColor="#555" />
                        <Entry 
                            x:Name="ContentEntry" 
                            Placeholder="Add meg a tartalmat..."
                            BackgroundColor="#FAFAFA"
                            TextColor="#222"
                            HeightRequest="40" />
                    </VerticalStackLayout>

                  
                </VerticalStackLayout>
            </Border>

            <Button 
                Text="Módosítás mentése"
                Clicked="OnSaveClicked"
                BackgroundColor="#0078D7"
                TextColor="White"
                HeightRequest="50"
                FontAttributes="Bold"
                FontSize="16"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>